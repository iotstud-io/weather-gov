{
    "name": "weather-gov-components",
    "components": [
        {
            "name": "ForecastFull",
            "defaultExport": true,
            "description": "Component to display the full 7 Day forecast from Weather.gov, including current conditions and alerts.",
            "css": [
                "css/weather-gov-shared.css"
            ],
            "capabilities": {
                "weather_forecast": "optional",
                "weather_observations": "optional",
                "weather_alerts": "optional",
                "weather_gridpoint_data": "optional"
            },
            "settings": [
                {
                    "name": "temperature_format",
                    "label": "Temperature Format",
                    "description": "Choose between Celsius and Fahrenheit.",
                    "default": "f",
                    "options": [
                        { "value": "c", "label": "Celsius" },
                        { "value": "f", "label": "Fahrenheit" }
                    ]
                }
            ]
        }
    ]
}
